{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "composite": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false
  }
}
