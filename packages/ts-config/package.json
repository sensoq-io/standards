{
  "name": "@sensoq/ts-config",
  "version": "0.0.2",
  "description": "TypeScript configuration templates for every project type - a powerful CLI tool and library providing battle-tested TypeScript configurations",
  "type": "module",
  "main": "./dist/index.esm.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.esm.d.ts",
  "author": "Sensoq Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sensoq-io/standards.git",
    "directory": "packages/ts-config"
  },
  "bugs": {
    "url": "https://github.com/sensoq-io/standards/issues"
  },
  "homepage": "https://github.com/sensoq-io/standards/tree/main/packages/ts-config#readme",
  "keywords": [
    "typescript",
    "tsconfig",
    "configuration",
    "cli",
    "templates",
    "nodejs",
    "vitest",
    "rollup",
    "monorepo"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "sensoq-tsconfig": "./dist/cli/generate.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.esm.d.ts",
      "import": "./dist/index.esm.js",
      "default": "./dist/index.esm.js"
    },
    "./*.json": "./src/*.json",
    "./cli": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "src/*.json"
  ],
  "nx": {
    "name": "@sensoq/ts-config"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
